pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "abdelrahmannayf/jenkins-app"
        IMAGE_TAG = "${BUILD_NUMBER}"
        // Ø§Ù„Ù…Ø³Ø§Ø± Ø§Ù„Ù†Ø³Ø¨ÙŠ Ù„Ù„Ù…Ù„Ù Ù…Ù† Ø±ÙˆØª Ø§Ù„Ø±ÙŠØ¨Ùˆ
        DEPLOYMENT_FILE = "CI-CD/lap 22/deployment.yaml"
    }

    tools {
        maven "Maven"
    }

    stages {
        stage('Run Unit Test') {
            steps {
                dir('CI-CD/lap 22') {
                    sh 'mvn test'
                }
            }
        }

        stage('Build App') {
            steps {
                dir('CI-CD/lap 22') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('CI-CD/lap 22') {
                    sh "docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh """
                    echo \$PASS | docker login -u \$USER --password-stdin
                    docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Delete Local Image') {
            steps {
                sh "docker rmi ${DOCKER_IMAGE}:${IMAGE_TAG}"
            }
        }

        stage('Update Deployment YAML') {
            steps {
                // Ø¨Ù†Ø¹Ø¯Ù„ Ø§Ù„Ù…Ù„Ù Ø¨Ø§Ø³ØªØ®Ø¯Ø§Ù… Ø§Ù„Ù…Ø³Ø§Ø± Ø§Ù„ÙƒØ§Ù…Ù„ Ù…Ù† Ø§Ù„Ø±ÙˆØª
                sh """
                sed -i 's|image:.*|image: ${DOCKER_IMAGE}:${IMAGE_TAG}|' "${DEPLOYMENT_FILE}"
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh "kubectl apply -f '${DEPLOYMENT_FILE}'"
            }
        }
    }

    post {
        always {
            echo "Pipeline Finished."
        }
        success {
            echo "Deployment Succeeded ğŸš€"
        }
        failure {
            echo "Deployment Failed âŒ"
        }
    }
}
